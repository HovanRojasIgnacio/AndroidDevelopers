<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:fitsSystemWindows="true"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen. Este atributo android:adjustViewBounds="true" garantiza
         que la imagen se vea bien ya que la API nos sirve tanto imagenes
         horizontales como verticales -->
        <ImageView
            android:id="@+id/imgFeatured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/babilonia"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="start"
                android:text="2025" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:text="18 DE NOVIEMBRE" />

        </LinearLayout>

        <!-- Título vistoso -->

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:lineSpacingExtra="2dp" />

        <!-- Subtítulo corto -->
        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Texto extenso (explicación/noticia) -->
        <TextView
            android:id="@+id/txtBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
